<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.smsspamguard">
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<application android:icon="@drawable/icon" android:label="@string/app_name" 
					android:theme="@android:style/Theme.NoTitleBar">
		<activity android:name="com.smsspamguard.Main" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.smsspamguard.Preferences" android:label="@string/title_preferences"/>
        <activity android:name="com.smsspamguard.Blacklist" android:label="@string/title_blacklist"/>
        <activity android:name="com.smsspamguard.BlacklistSender" android:label="@string/title_blacklist_sender"/>
        <activity android:name="com.smsspamguard.BlacklistText" android:label="@string/title_blacklist_text"/>
        <activity android:name="com.smsspamguard.BlacklistRegex" android:label="@string/title_blacklist_regex"/>
        <activity android:name="com.smsspamguard.Whitelist" android:label="@string/title_whitelist"/>
        <activity android:name="com.smsspamguard.Spams" android:label="@string/title_spams"/>
  
		<receiver android:name="com.smsspamguard.SmsIntentReceiver" android:enabled="true">
			<intent-filter android:priority="100" >
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
	</application>
	<uses-sdk android:minSdkVersion="7" />
</manifest> 